[Unit]
Description=Run simple entity extraction app
Requires=llm_readiness.service
After=llm_readiness.service

[Service]
Restart=on-failure
RestartSec=60
EnvironmentFile=/etc/pim/env.conf

[Container]
Image=quay.io/<account id>/pim:entity-extraction
Network=host
SecurityLabelType=unconfined_t
AutoUpdate=registry

[Install]
WantedBy=multi-user.target default.target
